          <!-- image upload and show.  -->

          <img src="//:0" id="preview" />
          <input type="file" id="imageFileInput" accept=".jpg, .jpeg, .png" />

        <!-- <input id="profile" onchange="upload()" type="file" accept="image/*" multiple="false" name="" value=""> -->

        <!-- IMAGE UPLOAD -->
        <form action="/up" enctype="multipart/form-data" method="post">
           <input type="file" name="file-to-upload">
           <input type="submit" value="Upload">
        </form>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <img src="img/genre.jpg" alt="Manga">

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Messages</h3>
          <ul class="messages">
          <% for(var i=0; i<comment.length; i++) {%>
            <li class="message">
              <span><%= comment[i].name %></span>
              <span><%= comment[i].comment %></span>
              <span id="date"></span>
              <span><%= comment[i].thumbUp %></span>
              <span><%= comment[i].thumbDown %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fas fa-trash"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/comment" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="comment" name="comment">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

